<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>evento-admin</portlet-name>
		<display-name>Evento Admin</display-name>
		<portlet-class>
			br.gov.demoiselle.portal.evento.EventoAdminPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/evento/admin/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/evento/admin/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>Evento Admin</title>
			<short-title>Evento Admin Portlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>evento-user</portlet-name>
		<display-name>Evento User</display-name>
		<portlet-class>
			br.gov.demoiselle.portal.evento.EventoUserPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/evento/user/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/evento/user/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>Evento User</title>
			<short-title>Evento User Portlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
</portlet-app>